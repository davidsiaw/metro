global-reset()

body
  font-family: Verdana, YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, sans-serif;
  color:white
  background:#000
  margin:0
  overflow:hidden
  a
    color:white
    text-decoration:none
    &:hover
      text-decoration:underline

  .title
    position:fixed
    top:0;left:0
    color:white
    width:100%
    height:40px
    background:#777

    h1
      font-size:20px
      line-height:40px
      margin-left:30px
      float:left

    ul
      float:right
      li
        display:inline-block
        line-height:40px
        margin-right:20px

  .tooltip
    background:#5b7e91
    border:2px solid #5b7e91 - #333
    padding:3px 10px
    color:white
    font-size:12px
    position:absolute;
    display:none;

  .station-detail
    position:fixed;
    width:300px;
    margin-top:40px
    height:100%;
    right:-300px
    top:0
    background:#32506A
    color:white;
    text-align:center
    transition:all 0.3s
    &.opened
      right:0
    .name
      font-size:32px
      font-weight:bold
      margin-top:32px
    .subname
      font-size:22px
      font-weight:bold
      line-height:48px
    .address
      font-size:16px
      margin-top:20px
    .line
      line-height:24px
      margin-top:12px
      img
        vertical-align:top
        margin-right:5px
      



  .signature
    position:fixed
    font-size:12px
    left:20px
    bottom:20px;

