global-reset()

body
  background:#000
  margin:0
  overflow:hidden

  .title
    position:fixed
    top:0;left:0
    color:white
    width:100%
    height:40px
    background:rgba(255,255,255,0.5)
    p
      position:absolute
      top:12px
      a
        color:white
        &:hover
          text-decoration:underline
    p:nth-child(1)
      font-size:20px
      left:30px
    p:nth-child(2)
      left:270px
    p:nth-child(3)
      left:430px
    p:nth-child(4)
      text-align:right
      right:30px

  .tooltip
    background:#5b7e91
    border:2px solid #5b7e91 - #333
    padding:3px 10px
    color:white
    font-size:12px
    position:absolute;
    display:none;
