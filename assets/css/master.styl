global-reset()

body
  font-family: Verdana, YuGothic, "Hiragino Kaku Gothic ProN", Meiryo, sans-serif;
  color:white
  background:#000
  margin:0
  overflow:hidden
  a
    color:white
    text-decoration:none
    &:hover
      text-decoration:underline

  .title
    absolute: top 0px left 0px
    size: 100% 40px
    color:white
    background:#777

    h1
      font-size:20px
      line-height:40px
      margin-left:30px
      float:left

    ul
      float:right
      li
        inline-block()
        line-height:40px
        margin-right:20px

  .tooltip
    absolute: top left
    display:none
    background:#5b7e91
    border:2px solid #5b7e91 - #333
    padding:3px 10px
    color:white
    font-size:12px

  .station-detail
    absolute: top 0px right -300px
    size: 300px 100%
    margin-top:40px
    background:#32506A
    color:white;
    text-align:center
    transition:all 0.3s
    &.opened
      right:0
    .name
      bold()
      font-size:32px
      margin-top:32px
    .subname
      bold()
      font-size:22px
      line-height:48px
    .address
      font-size:16px
      margin-top:20px
    .line
      line-height:24px
      margin-top:12px
      img
        vertical-align:top
        margin-right:5px

  .signature
    absolute: bottom 20px left 20px
    font-size:12px

